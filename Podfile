# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'TaxiAggregator-iOS' do
  use_frameworks!

  # Fabric & Firebase analytics
  pod 'Firebase/Analytics'
  pod 'Fabric', '~> 1.10.2'
  pod 'Crashlytics', '~> 3.14.0'
  
  # JSON
  pod 'ObjectMapper', '~> 3.4'
  pod 'SwiftyJSON', '~> 5.0'

  # Internet
  pod 'Starscream', '~> 3.0.2'
  pod 'Alamofire', '~> 5.0.0-rc.3'
  
  # Store
  pod 'RealmSwift'

  # UI
  pod 'SideMenu', '~> 6.0'
  pod 'SnapKit', '~> 5.0.0'
    
  pod 'CHIPageControl/Jaloro'

  # Map & Places
  pod 'GoogleMaps'
  pod 'GooglePlaces'

  # Reactive
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxKeyboard'
  
  # Async operations
  pod "PromiseKit", "~> 6.8"
  
end
